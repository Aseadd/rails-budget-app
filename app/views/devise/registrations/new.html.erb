
<%= stylesheet_link_tag "signup"%>
<div class="register-header">
  <h1 class="back-link"> <%= link_to(splash_index_path) do %>
    <i class="fa fa-arrow-left" aria-hidden="true"></i>
    <% end %>
  </h1>
  <h1 class="title">Register</h1>
</div>

<div class="form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", requred: true, class: "form-input" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", requred: true, class: "form-input" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", requred: true, class: "form-input" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", requred: true, class: "form-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn" %>
  </div>
<% end %>
<div class="devise-shared-links">
  <%= render "devise/shared/links", class: "login-page-link"%>
</div>
</div>
