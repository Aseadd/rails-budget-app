
<p style="color: green"><%= notice %></p>

<section class="category-page">
  <h1>Categories</h1>

<% if @categories.empty? %>
  <p>There are no categories yet.</p>
<% else %>
<div id="categories" class="categories">
  <% @categories.each do |category| %>
  
  <div class ="category-item">
    <%= link_to(category) do %>
    <img src="<%= category.icon%>" alt="category image" class="icon" />
    <% end %>
    <%= link_to(category) do %>
    <span><%= category.name.upcase_first%> </span>
    <% end %>
    <%= link_to(category) do %>
    <span>$<%= category.total_amount%> </span>
    <% end %>
     <%= link_to(category) do %>
    <i class="fa fa-arrow-right" aria-hidden="true"></i>
    <% end %>
  </div>
  <% end %>
</div>
<% end %>
<div class="register-category">
<%= link_to "New Category", new_category_path, class: "category-btn" %>
</div>
</section>
